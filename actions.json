{
  "openapi": "3.1.0",
  "info": {
    "title": "GitHub Repository Operations",
    "description": "APIs for managing GitHub repository contents",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "https://api.github.com"
    }
  ],
  "paths": {
    "/repos/{OWNER}/{REPO}/readme": {
      "get": {
        "description": "Get README content of a repository",
        "operationId": "GetReadmeContent",
        "parameters": [
          {
            "name": "OWNER",
            "in": "path",
            "description": "The owner of the repository",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "REPO",
            "in": "path",
            "description": "The repository name",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "deprecated": false
      }
    },
    "/repos/{OWNER}/{REPO}/contents/{PATH}": {
      "get": {
        "description": "Get content at a path in a repository",
        "operationId": "GetContentAtPath",
        "parameters": [
          {
            "name": "OWNER",
            "in": "path",
            "description": "The owner of the repository",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "REPO",
            "in": "path",
            "description": "The repository name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "PATH",
            "in": "path",
            "description": "The path to the content",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "deprecated": false
      },
      "put": {
        "description": "Update content at a path in a repository",
        "operationId": "UpdateContentAtPath",
        "parameters": [
          {
            "name": "OWNER",
            "in": "path",
            "description": "The owner of the repository",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "REPO",
            "in": "path",
            "description": "The repository name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "PATH",
            "in": "path",
            "description": "The path to the content",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "The content to be updated",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  },
                  "committer": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  },
                  "content": {
                    "type": "string"
                  },
                  "sha": {
                    "type": "string"
                  }
                },
                "required": [
                  "message",
                  "committer",
                  "content"
                ]
              }
            }
          },
          "required": true
        },
        "deprecated": false
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
